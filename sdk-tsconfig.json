{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "composite": false,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noEmit": false,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "rootDir": "../",
    "paths": {
      "@selldone/core-js/*": ["../core-js/*"] // Adjust this to your project structure
    //  "@selldone/core-js/*": ["../core-js/*"]
      // Adjust paths according to your project structure
      // "@selldone/sdk-storefront/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_docs",
    "public",
    "dist"
  ]
}
