{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "composite": false,
    "jsx": "preserve",
    "noImplicitThis": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noEmit": false,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "rootDir": "../",
    "paths": {
       //"@selldone/sdk-storefront/*": ["/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_docs",
    "public",
    "dist",
    "standalone",
    "**/*.test.ts",
    "**/__tests__/**/*",
    "tests"
  ]
}
