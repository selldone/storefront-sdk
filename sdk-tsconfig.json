{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "declaration": true,                      // Generates corresponding '.d.ts' file

    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noImplicitThis": false,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "rootDir": ".",
    "paths": {
   //   "@selldone/core-js/*": ["../core-js/*"] // Adjust this to your project structure
    //  "@selldone/core-js/*": ["../core-js/*"]
      // Adjust paths according to your project structure
     //  "@selldone/sdk-storefront/*": ["/*"]
    }
  },
  "include": [
    "apis",
    "article",
    "auth",
    "avocado",
    "basket",
    "cashback",
    "coupon",
    "database",
    "lottery",
    "offer",
    "plugins",
    "product",
    "shop",
    "types",
    "user",
    "vendor",
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_docs",
    "public",
    "dist"
  ]
}
