{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "outFile": "./dist/bundle.js",  // Output all compiled code to a single file
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmitOnError": true,  // Consider changing to true to avoid emitting files on error

    "composite": false,  // Must be false if using outFile

    "jsx": "preserve",

    "noImplicitThis": true,  // Changed to true for consistent strict checking
    "strict": true,  // Enable strict type checking

    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,  // Set to false if you don't need source maps for production
    "baseUrl": ".",
    "noEmit": false,  // Changed to false because 'noEmit' and 'outFile' cannot both be true
    "allowImportingTsExtensions": false,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "rootDir": ".",
    "paths": {
     // "@selldone/sdk-storefront/*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx",
  ],
  "exclude": [
    "node_modules",
    "_docs",
    "public"
  ]
}
