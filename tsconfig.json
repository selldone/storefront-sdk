{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",  // Change module to UMD
    "outDir": "./dist/",
    "importHelpers": true,
    "moduleResolution": "node",

    "noEmitOnError": true,

    "composite": false,

    "jsx": "preserve",

    "noImplicitThis": true,
    "strict": true,

    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "rootDir": ".",
    "paths": {
      // Adjust paths according to your project structure
      // "@selldone/sdk-storefront/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules",
    "_docs",
    "public"
  ]
}
